{
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [100, 120],
    "editor.trimAutoWhitespace": true,
    "editor.formatOnSaveMode": "file",

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        ".vscode/*.json": "jsonc",
        "*.txt": "plaintext",
        "*.yaml": "yaml",
        "*.yml": "yaml",
        "*.toml": "toml",
        "*.yaml.example": "yaml",
        "*.yml.example": "yaml",
        ".envrc": "shellscript",
        ".envrc.example": "shellscript"
    },

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.ruff_cache": true,
        "**/__pycache__": true,
        "**/*.egg-info": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.ruff_cache": true,
        "**/__pycache__": true,
        "**/uv.lock": true,
        "**/.venv": true
    },

    "[python]": {
        "editor.wordBasedSuggestions": "off",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "always",
            "source.fixAll.ruff": "explicit"
        }
    },

    "[json]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
            "source.fixAll.sortJSON": "never"
        }
    },
    "[jsonc]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
            "source.fixAll.sortJSON": "never"
        }
    },
    "json.format.keepLines": true,

    "[yaml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "yaml.format.bracketSpacing": true,
    "yaml.format.proseWrap": "preserve",
    "yaml.format.singleQuote": false,
    "yaml.format.printWidth": 110,

    "[css]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "yaml.schemas": {
        "https://json.schemastore.org/clangd.json": ".clangd",
        "https://raw.githubusercontent.com/compose-spec/compose-go/master/schema/compose-spec.json": [
            "compose*.y*ml",
            "docker-compose*.y*ml",
            "compose*.y*ml.example",
            "docker-compose*.y*ml.example"
        ]
    }
}
